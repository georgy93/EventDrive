{
  "AllowedHosts": "*",
  "errorHandlingSettings": {
    "showDetails": false
  },
  "IntegrationEventsSettings": {
    "PublishRetryCount": 3
  },
  "RabbitMqSettings": {
    "ClientProvidedConnectionName": "EventDrive.API",
    "CreateConnectionRetryCount": 3,
    "HostName": "rabbitmq",
    "Password": "guest",
    "UserName": "guest"
  },
  "RedisSettings": {
    "Host": "redis:6379",
    "AbortOnConnectFail": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "System.Net.Http.HttpClient": "Information"
      }
    },
    "Using": [ "Serilog.Sinks.Console" ],
    "WriteTo": [
      {
        "args": { "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss:fff} ({SourceContext}) [{Level}] {Message}{NewLine}{Exception}" },
        "name": "Console"
      }
    ]
  },
  "SwaggerSettings": {
    "Description": "Playground API",
    "JsonRoute": "swagger/{documentName}/swagger.json",
    "UIEndpoint": "v1/swagger.json"
  }
}